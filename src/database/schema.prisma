generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Configuration {
  id                   Int    @id @default(autoincrement())
  cloudflare_email     String @unique
  cloudflare_api_token String
  zone_name            String
  dns_record           String
  frequency            Int
}
